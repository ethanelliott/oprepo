extends layout

block content
  #contentWrapper
    #content
      #header
        #header-column
          a(href="/")
            img(src="/images/logo.png")
        #header-column
          a#button(href="#{downloadZip}", download="OPR#{title}.zip") Download
          a#button(href="/r/#{title}/history") History
      h1 OPR#{title}
      if days === 0
        h2 #{date} @ #{time} (Today)
      else
        h2 #{date} @ #{time} (#{days} days ago)
      h2(style="font-style:italic;") #{recentUpload.message}
      table(id="list-table")
        tr
          th(style="width:80%;text-align:left;padding-left:5%;") Name
          th Download
        each f, i in recentUpload.files
          tr
            td.file(style="padding-left:2em")
              a(href="/r/#{title}/#{recentUpload._id}/#{f.id}") #{f.name}
            td.file(style="text-align:center")
              a(download="#{f.name}", href="data:application/octet-stream;base64,#{f.data}") Here
              

    
      
    
